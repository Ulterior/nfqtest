{% extends 'base.html.twig' %}

{% block title %}Create Restaurant{% endblock %}

{% block stylesheets %}

<style>
</style>

{% endblock %}

{% block body %}

<div class="container">
  <div class="row" style="padding-bottom:10px">
    <div class="col-md-12">
      <code>{{ restaurant.title }}</code>&nbsp;<a class="btn btn-primary btn-sm" href="{{ path('restaurant_tables', {'restaurant_id': restaurant.id}) }}">Table List</a>
    </div>

  </div>

  <div class="row" style="padding-bottom:10px">
      <div class="col-md-8">
          <div class="card card-default">
              <div class="card-header">Create Restaurant Table</div>
              <div class="card-body" style="display:block">

                <form method="POST" action="{{ path('create_restaurant_table', {'restaurant_id': restaurant.id}) }}">

                  {% if info is defined %}
                      <div class="alert alert-success">{{ info }}</div>
                  {% endif %}

                  {% if error is defined %}
                      <div class="alert alert-danger">{{ error }}</div>
                  {% endif %}

                  <input type="hidden" name="_csrf_token"
                         value="{{ csrf_token('create_restaurant_table') }}"
                  >

                  <div class="form-group row">
                      <label for="table_number" class="col-md-4 col-form-label text-md-right">Unique Number</label>

                      <div class="col-md-6">
                          <input id="table_number" type="text" class="form-control" name="table_number" value="" required autofocus>
                      </div>
                  </div>

                  <div class="form-group row">
                      <label for="table_capacity" class="col-md-4 col-form-label text-md-right">Capacity</label>

                      <div class="col-md-6">
                          <input id="table_capacity" type="text" class="form-control" name="table_capacity" value="" required autofocus>
                      </div>
                  </div>

                  <div class="form-group row">
                      <div class="col-md-6 offset-md-4">
                          <div class="form-check">
                              <input class="form-check-input" type="checkbox" name="status" id="status" checked>

                              <label class="form-check-label" for="status">Active</label>
                          </div>
                      </div>
                  </div>

                  <div class="form-group row mb-0">
                      <div class="col-md-8 offset-md-4">
                          <button type="submit" class="btn btn-primary">Create</button>
                      </div>
                  </div>

                </form>

              </div>
          </div>
      </div>
</div>

</div>
{% endblock %}
