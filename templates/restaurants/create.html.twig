{% extends 'base.html.twig' %}

{% block title %}Create Restaurant{% endblock %}

{% block stylesheets %}

<style>
</style>

{% endblock %}

{% block body %}

<div class="container">
  <div class="row" style="padding-bottom:10px">
    <div class="col-md-12">
      <a class="btn btn-primary" href="{{ path('restaurants') }}">Restaurant List</a>
    </div>

  </div>

  <div class="row" style="padding-bottom:10px">
      <div class="col-md-8">
          <div class="card card-default">
              <div class="card-header">Create Restaurant</div>
              <div class="card-body" style="display:block">

                <form method="POST" action="{{ path('create_restaurant') }}">

                  {% if info is defined %}
                      <div class="alert alert-success">{{ info }}</div>
                  {% endif %}

                  {% if error is defined %}
                      <div class="alert alert-danger">{{ error }}</div>
                  {% endif %}

                  <input type="hidden" name="_csrf_token"
                         value="{{ csrf_token('create_restaurant') }}"
                  >

                  <div class="form-group row">
                      <label for="title" class="col-md-4 col-form-label text-md-right">Title</label>

                      <div class="col-md-6">
                          <input id="title" type="text" class="form-control" name="title" value="" required autofocus>
                      </div>
                  </div>

                  <div class="row" style="padding-bottom:10px">
                    <div class="col-md-4"></div>
                    <div class="col-md-5">
                    </div>
                  </div>
                  <div class="form-group row">
                      <div class="col-md-6 offset-md-4">
                          <div class="form-check">
                              <input class="form-check-input" type="checkbox" name="status" id="status" checked }}>

                              <label class="form-check-label" for="status">Active</label>
                          </div>
                      </div>
                  </div>

                  <div class="form-group row mb-0">
                      <div class="col-md-8 offset-md-4">
                          <button type="submit" class="btn btn-primary">Create</button>
                      </div>
                  </div>

                </form>

              </div>
          </div>
      </div>
</div>

</div>
{% endblock %}
