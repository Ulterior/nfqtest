<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{% endblock %}</title>
        <link rel="stylesheet" href="{{ path('welcome') }}build/app.css">
        {% block stylesheets %}{% endblock %}

        <script src="{{ path('welcome') }}build/app.js"></script>
        <script src="{{ path('welcome') }}build/vendors~app.js"></script>

        {% block javascripts %}{% endblock %}
    </head>
    <body>

      <div id="app">
          <nav class="navbar navbar-expand-md navbar-light bg-white shadow-sm">
              <div class="container">
                  <a class="navbar-brand" href="{{ path('welcome') }}">NFQ</a>
                  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                      <span class="navbar-toggler-icon"></span>
                  </button>

                  <div class="collapse navbar-collapse" id="navbarSupportedContent">
                      <!-- Left Side Of Navbar -->
                      <ul class="navbar-nav mr-auto">

                      </ul>

                      <!-- Right Side Of Navbar -->
                      <ul class="navbar-nav ml-auto">
                          <!-- Authentication Links -->

                          {% if app.user %}

                          <li class="nav-item dropdown">
                              <a id="navbarDropdown" class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" v-pre>
                                  {{ app.user.username }} <span class="caret"></span>
                              </a>

                              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                  <a class="dropdown-item" href="{{ path('app_logout') }}"
                                  onclick="event.preventDefault();
                                                document.getElementById('logout-form').submit();">Logout
                               </a>

                               <form id="logout-form" action="logout" method="POST" style="display: none;">
                               </form>
                              </div>
                          </li>

                          {% elseif app.request.get('_route') != 'app_login' %}

                          <li class="nav-item">
                              <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                          </li>

                          {% else%}

                          <li class="nav-item">
                              <a class="nav-link" href="{{ path('welcome') }}">Home</a>
                          </li>

                          {% endif %}
                   </ul>
               </div>
           </div>
       </nav>

       <main class="py-4">
        {% block body %}{% endblock %}
       </main>
    </div>

    </body>
</html>
